<script type="text/javascript">
$(function (){
	var ajax = nuevoAjax();
	ajax.open("GET", "ajax_chart_ventas.php", false);
	ajax.send(null);
	var resp = URLDecode(ajax.responseText);
	var result = eval("(" + resp + ")");
	
	Highcharts.setOptions({
	    lang: {
	        decimalPoint: ',',
	        thousandsSep: '.'
	    },
	    colors: ['#696161', '#FF2828']
	});
	
    $('#container').highcharts({
        chart: {
            type: 'column',
            margin: 100,
            options3d: {
                enabled: true,
                alpha: 10,
                beta: 25,
                depth: 70
            }
        },
        title: {
            text: 'Ventas Netas Anuales 2013 / 2014'
        },
        plotOptions: {
            column: {
                depth: 25
            }
        },
        tooltip: {
            pointFormat:'<span style="color:{series.color}">»</span> {series.name}: <b>{point.y}</b><br/>'
        },
        xAxis: {
           labels: {
               rotation: -45,
               style: {
                  fontSize: '11px'
               }
           },
            categories: ['Enero', 'Febrero', 'Marzo', 'Abril', 'Mayo', 'Junio', 'Julio', 'Agosto', 'Septiembre', 'Octubre', 'Noviembre', 'Diciembre']
        },
        yAxis: {
            title: { text: 'Montos Netos' }
        },
        legend: {
            align: 'left',
            verticalAlign: 'top',
            x: 80,
            y: 320,
            floating: true,
        },
        series: [{
            name: '2013',
            data: [result[0]['ENE_2013'], result[0]['FEB_2013'], result[0]['MAR_2013'], result[0]['ABR_2013'], result[0]['MAY_2013'], result[0]['JUN_2013'], result[0]['JUL_2013'], result[0]['AGO_2013'], result[0]['SEP_2013'], result[0]['OCT_2013'], result[0]['NOV_2013'], result[0]['DIC_2013']]
        },{
            name: '2014',
            data: [result[0]['ENE_2014'], result[0]['FEB_2014'], result[0]['MAR_2014'], result[0]['ABR_2014'], result[0]['MAY_2014'], result[0]['JUN_2014'], result[0]['JUL_2014'], result[0]['AGO_2014'], result[0]['SEP_2014'], result[0]['OCT_2014'], result[0]['NOV_2014'], result[0]['DIC_2014']]     
        }]
    });
});
</script>
<style type="text/css">
#container {
	height: 500px; 
	min-width: 310px; 
	max-width: 800px;
	margin: 0 auto;
}
</style>
